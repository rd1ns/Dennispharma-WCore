    ViewData["SystemTitle"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "Page";

    @if (Model.Id == 0)
    {
        Model.IsActive = true;
        Model.Deleted = false;
        Model.ShowOn = true;
        Model.DisplayOrder = 0;
