@{
    ViewData["PageMainTitle"] = "Şehir Yönetimi";
    ViewData["PageTitle"] = "Şehir Listesi";
    ViewData["Title"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class=" container-fluid ">
            <!--begin::UserPage-->
            <div class="card card-custom">
                <div class="card-header" style="">
                    <div class="card-title">
                        <h3 class="card-label">
                            @ViewData["PageTitle"] <i class="mr-2"></i>
                            <small class="">@ViewData["PageMainTitle"]</small>
                        </h3>
                    </div>
                    <div class="card-toolbar">
                        <!--begin::Dropdown-->
                        <div class="dropdown dropdown-inline mr-2">
                            <button type="button" class="btn btn-light-primary font-weight-bolder dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-list"></i> Çıktı Al
                            </button>
                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                                <ul class="navi flex-column navi-hover py-2">
                                    <li class="navi-item">
                                        <a href="#" id="export_print" class="navi-link">
                                            <span class="navi-icon"><i class="la la-print"></i></span>
                                            <span class="navi-text">Yazdır</span>
                                        </a>
                                    </li>
                                    <li class="navi-item">
                                        <a href="#" id="export_copy" class="navi-link">
                                            <span class="navi-icon"><i class="la la-copy"></i></span>
                                            <span class="navi-text">Kopyala</span>
                                        </a>
                                    </li>
                                    <li class="navi-item">
                                        <a href="#" id="export_excel" class="navi-link">
                                            <span class="navi-icon"><i class="la la-file-excel-o"></i></span>
                                            <span class="navi-text">Excel'e Aktar</span>
                                        </a>
                                    </li>
                                    <li class="navi-item">
                                        <a href="#" id="export_csv" class="navi-link">
                                            <span class="navi-icon"><i class="la la-file-text-o"></i></span>
                                            <span class="navi-text">CSV'ye Aktar</span>
                                        </a>
                                    </li>
                                    <li class="navi-item">
                                        <a href="#" id="export_pdf" class="navi-link">
                                            <span class="navi-icon"><i class="la la-file-pdf-o"></i></span>
                                            <span class="navi-text">PDF'e Aktar</span>
                                        </a>
                                    </li>
                                </ul>
                                <!--end::Navigation-->
                            </div>
                            <!--end::Dropdown Menu-->
                        </div>
                        <!--end::Dropdown-->
                        <a asp-action="cityaddoredit" asp-route-id="0" class="btn btn-success font-weight-bolder mr-2">
                            <i class="ki ki-plus icon-xs"></i>
                            Yeni Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover table-checkable" id="district_datatable" style="margin-top: 13px !important">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Ülke</th>
                                <th>Durum</th>
                                <th>Silindi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <!--end::UserPage-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>

@section Scripts{
    <script>

        var distrctDataTable = $('#district_datatable').DataTable({
            responsive: true,
            processing: true,
            serverSide: true,
            buttons: [
                'print', 'copy', 'excel', 'csv', 'pdf',
            ],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json",
            },
            ajax: {
                url: '/common/GetDistrictFilteredItems',
                type: 'POST',
                data: {
                    pagination: {
                        perpage: 10,
                    },
                },
            },
            columns: [
                { data: 'name' },
                { data: 'id' },
                { data: 'isActive' },
                { data: 'deleted' },
                { data: 'id', responsivePriority: -1 },
            ],
            columnDefs: [{
                width: '105px',
                targets: 1,
                className: "text-center",
                render: function (data, type, full, meta) {
                    return '<i class="' + (full.country != null ? "Ülke Seçilmemiş." : full.country.name) + '"></i>';
                },
            },{
                width: '105px',
                targets: -3,
                className: "text-center",
                render: function (data, type, full, meta) {
                    return '<i class="' + (data ? "fa fa-check text-success" : "fa fa-times text-danger") + '"></i>';
                },
            },
            {
                width: '105px',
                targets: -2,
                className: "text-center",
                render: function (data, type, full, meta) {
                    return '<i class="' + (data ? "fa fa-check text-success" : "fa fa-times text-danger") + '"></i>';
                },
            },
            {
                targets: -1,
                title: '',
                width: '120px',
                orderable: false,
                render: function (data, type, full, meta) {
                    return '<a <a href="/common/cityaddoredit/' + data + '" class="btn btn-sm btn-clean btn-icon" title="Edit details">\
                                <i class="la la-edit"></i>\
                            </a>\
                            <a href="javascript:void(0)" data-id="' + data + '" class="btn btn-sm btn-clean btn-icon btnDelete" title="Delete">\
                                <i class="la la-trash"></i>\
                            </a>';
                },
            }
            ],
        });

        $("body").on("click", "#district_datatable .btnDelete", function () {
            Swal.fire({
                title: 'Eminmisiniz?',
                text: "Kaydı silmek istediğiniz eminmisiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'Hayır',
                timer: 3000,
                timerProgressBar: true
            }).then((result) => {
                if (result.value) {
                    var id = $(this).attr("data-id");
                    console.log(id);
                    $.ajax({
                        type: "POST",
                        url: '/common/cityaddoredit',
                        data: { id: id, delete: true },
                        success: function (data) {
                            $('#district_datatable').KTDatatable('reload');
                            Swal.fire({
                                title: 'Başarılı',
                                icon: 'success',
                                showCancelButton: false,
                                showConfirmButton: false,
                                timer: 1000,
                                timerProgressBar: true
                            });
                        },
                        error: function (d) {
                            console.log(d);
                        }
                    });
                }
            })
        });

        $('#export_print').on('click', function (e) {
            e.preventDefault();
            distrctDataTable.button(0).trigger();
        });

        $('#export_copy').on('click', function (e) {
            e.preventDefault();
            distrctDataTable.button(1).trigger();
        });

        $('#export_excel').on('click', function (e) {
            e.preventDefault();
            distrctDataTable.button(2).trigger();
        });

        $('#export_csv').on('click', function (e) {
            e.preventDefault();
            distrctDataTable.button(3).trigger();
        });

        $('#export_pdf').on('click', function (e) {
            e.preventDefault();
            distrctDataTable.button(4).trigger();
        });
    </script>
}