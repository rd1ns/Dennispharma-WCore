@model DynamicFormModel
@{
    ViewData["PageMainTitle"] = T("Admin.Configuration.DynamicForms.Title");
    ViewData["PageTitle"] = Model.Id == 0 ? T("Admin.Configuration.DynamicForms.Add") : T("Admin.Configuration.DynamicForms.Edit");
    ViewData["SystemTitle"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "DynamicForm";

    @if (Model.Id == 0)
    {
        Model.IsActive = true;
        Model.Deleted = false;
    }
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="/admin/@ViewData["ControllerName"]" class="text-muted">
                                @ViewData["PageMainTitle"]
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            @if (Model.Id == 0)
                            {
                                <b>@T("admin.common.new")</b>
                            }
                            else
                            {
                                @Model.Title
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <partial name="_AddOrEditHeaderButtons" model="@Tuple.Create(Model.Id,"DynamicFormForm")" />
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <div class="card card-custom">
                <div class="card-body">
                    <WCore-tabs id="dynamicForm-edit" asp-tab-name-to-select="tab-details" asp-render-selected-tab-input="false">
                        <WCore-tab asp-name="tab-details" asp-title="@T("Admin.Configuration.Details")" asp-default="true">
                            <form id="DynamicFormForm" asp-action="AddOrEdit" asp-controller="@ViewData["ControllerName"]" enctype="multipart/form-data">
                                @(Html.LocalizedEditor<DynamicFormModel, DynamicFormLocalizedModel>("skiresort-localized",
                                @<div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Locales[item].Title" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].Title"  asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="Locales[item].Body" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].Body" asp-template="RichEditor"/>
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="Locales[item].Result" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].Result" asp-template="RichEditor"/>
                                        </div>
                                    </div>
                                     <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                                </div>,
                                @<div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Title" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Title"   asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="Body" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Body"  asp-template="RichEditor"  />
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="Result" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Result" asp-template="RichEditor"/>
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="Image" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            @if (!string.IsNullOrEmpty(Model.Image))
                                            {
                                                <img src="@Model.Image" style="max-height:200px; margin-bottom:15px; border:1px solid #cecece;" />
                                            }
                                            <input type="file" name="Image" accept="image/gif, image/jpeg, image/png" id="Image" class="form-control pt-2" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="DynamicFormType" />
                                        <div class="col-9">
                                            <WCore-select asp-for="DynamicFormType" asp-items="Model.DynamicFormTypes" />
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="ToAddresses" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="ToAddresses"  asp-type="form-control form-control-sm form-control-solid"/>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0 row">
                                        <WCore-label asp-for="ShowOn" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <div class="checkbox-inline">
                                                <label class="checkbox pt-3">
                                                    <input asp-for="ShowOn" />
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0 row">
                                        <WCore-label asp-for="IsActive" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <div class="checkbox-inline">
                                                <label class="checkbox pt-3">
                                                    <input asp-for="IsActive" />
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0 row">
                                        <WCore-label asp-for="Deleted" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <div class="checkbox-inline">
                                                <label class="checkbox pt-3">
                                                    <input asp-for="Deleted" />
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0 row">
                                        <WCore-label asp-for="UseLocalization" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <div class="checkbox-inline">
                                                <label class="checkbox pt-3">
                                                    <input asp-for="UseLocalization" />
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>))
                                <input type="hidden" asp-for="Id" />
                            </form>
                        </WCore-tab>
                        @if (Model.Id != 0)
                        {
                            <WCore-tab asp-name="tab-dynamicFormElements" asp-title="@T("Admin.Configuration.DynamicFormElements")">
                                <form id="DynamicFormElement" asp-action="AddOrEdit" asp-controller="@ViewData["ControllerName"]"  enctype="multipart/form-data">
                                    <table class="table table-bordered table-hover createForm">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Gereklilik</th>
                                                <th>Eleman</th>
                                                <th>Label</th>
                                                <th>Value</th>
                                                <th>Localizasyon</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.DynamicFormElements.Select((value, i) => new { i, value }))
                                            {
                                                <tr data-row-number="@item.i">
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-danger btn-add"><i class="ki ki-plus icon-xs p-0"></i></button>
                                                        <button type="button" class="btn btn-sm btn-info btn-remove"><i class="ki ki-minus icon-xs p-0"></i></button>
                                                        <input asp-for="DynamicFormElements[item.i].DynamicFormId" type="hidden" class="cElementId" />
                                                        <input asp-for="DynamicFormElements[item.i].Id" type="hidden" class="cId" />
                                                    </td>
                                                    <td>
                                                        <div class="checkbox-inline">
                                                            <label class="checkbox pt-3">
                                                                <input asp-for="DynamicFormElements[item.i].Required" class="cRequired" />
                                                                <span></span>
                                                            </label>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <WCore-select asp-for="DynamicFormElements[item.i].ControlElement" asp-items="Model.DynamicFormElements[item.i].ControlElements" class="cElements" />
                                                    </td>
                                                    <td>
                                                        <WCore-editor asp-for="DynamicFormElements[item.i].ControlLabel" asp-required="true" asp-type="form-control form-control-sm form-control-solid cLabel" />
                                                    </td>
                                                    <td>
                                                        <WCore-editor asp-for="DynamicFormElements[item.i].ControlValue" asp-required="true" asp-type="form-control form-control-sm form-control-solid cValue" />
                                                    </td>
                                                    <td>
                                                        <label class="pt-3">common.df.@Model.DynamicFormElements[item.i].Id.@Model.Id</label>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </form>
                            </WCore-tab>
                        }
                        @if (Model.Id != 0)
                        {
                            <WCore-tab asp-name="tab-dynamicFormRecords" asp-title="@T("Admin.Configuration.DynamicFormRecords")">
                                <div id="dynamicFormRecords_datatable" class="pTable"></div>
                            </WCore-tab>
                        }
                    </WCore-tabs>

                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts{
    <script>
        $("#DynamicFormForm").submit(function (e) {
            e.preventDefault();

            var data = new FormData();
            //Form data
            var form_element_data = $('#DynamicFormElement').serializeArray();
            var form_data = $('#DynamicFormForm').serializeArray();
            $.each(form_data, function (key, input) {
                var inputId = $("[name='" + input.name + "']").attr("id");
                var editor = tinyMCE.editors[inputId];
                var IsEditor = editor == null ? false : true;
                if (IsEditor) {
                    var myContent = editor.getContent();
                    data.append(input.name, myContent);
                }
                else {
                    data.append(input.name, input.value);
                }
            });

            $.each(form_element_data, function (key, input) {
                data.append(input.name, input.value);
            });
            //File data
            var file_data = $("#Image")[0].files;
            for (var i = 0; i < file_data.length; i++) {
                data.append("file", file_data[i]);
            }
            var url = $(this).attr('action');
            var id = @Model.Id;
            $.ajax({
                type: "POST",
                url: "/admin/"+url,
                processData: false,
                contentType: false,
                data: data,
                success: function (data) {
                    if (id == 0) {
                        window.location.href = "/admin/dynamicForm";
                    }
                    else if (!data.continueEditing) {
                        Swal.fire({
                            title: '@T("admin.notification.success")',
                            text: "@T("admin.notification.editcontinue")",
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Evet',
                            cancelButtonText: 'Hayır',
                            timer: 3000,
                            timerProgressBar: true
                        }).then((result) => {
                            if (!result.value) {
                                window.location.href = "/admin/dynamicForm";
                            }
                        })
                    }
                }
            });
        });
    </script>
    <script>
        $("body").delegate(".btn-add", "click", function () {
            var id = @Model.Id;
            var rowCount = $(".createForm tbody tr[data-row-number]").length;

            var row = $("table tbody tr:first").clone();
            var cId = row.find(".cId");
            cId.attr('id', 'DynamicFormElements_' + rowCount + '__DynamicFormId');
            cId.attr('name', 'DynamicFormElements[' + rowCount + '].DynamicFormId');
            cId.attr('value', id    );

            var cElementId = row.find(".cElementId");
            cElementId.attr('id', 'DynamicFormElements_' + rowCount + '__Id');
            cElementId.attr('name', 'DynamicFormElements[' + rowCount + '].Id');
            cElementId.attr('value', '0');

            var cRequired = row.find(".cRequired");
            cRequired.attr('id', 'DynamicFormElements_' + rowCount + '__Required');
            cRequired.attr('name', 'DynamicFormElements[' + rowCount + '].Required');

            var cElements = row.find(".cElements");
            cElements.attr('id', 'DynamicFormElements_' + rowCount + '__ControlElement');
            cElements.attr('name', 'DynamicFormElements[' + rowCount + '].ControlElement');

            var cValue = row.find(".cValue");
            cValue.attr('id', 'DynamicFormElements_' + rowCount + '__ControlValue');
            cValue.attr('name', 'DynamicFormElements[' + rowCount + '].ControlValue');
            cValue.attr('value', '');

            var cLabel = row.find(".cLabel");
            cLabel.attr('id', 'DynamicFormElements_' + rowCount + '__ControlLabel');
            cLabel.attr('name', 'DynamicFormElements[' + rowCount + '].ControlLabel');
            cLabel.attr('value', '');

            $(".createForm tbody").append(row);

        });

        $("body").delegate(".btn-remove", "click", function () {
            var rowCount = $(".createForm tbody tr").not('.d-none').length;

            if (rowCount != 1) {
                $(this).parent().parent().addClass("d-none");
                var cValue = $(this).parent().parent().find(".cValue");
                cValue.attr('value', 'Delete');
                var cLabel = $(this).parent().parent().find(".cLabel");
                cLabel.attr('value', 'Delete');
            }
        });
    </script>
}
