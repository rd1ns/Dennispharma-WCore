            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <wCore-label asp-for="MetaKeywords" />
            </div>
            <div class="col-md-9">
                <wCore-editor asp-for="MetaKeywords" />
                <span asp-validation-for="MetaKeywords"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <wCore-label asp-for="MetaDescription" />
            </div>
            <div class="col-md-9">
                <wCore-textarea asp-for="MetaDescription"></wCore-textarea>
                <span asp-validation-for="MetaDescription"></span>
            </div>
        </div>
        <script>
    		$(document).ready(function () {
    			$('#@Html.IdFor(model => model.SeName)').on('input change', function () {
    				var parameters = {
    				    entityId: '@Model.Id',
    				    entityName: 'Category',
    				    seName: $(this).val()
    				};
    				warningValidation('@Url.Action("UrlReservedWarning", "Common")', '@Html.NameFor(model => model.SeName)', parameters);
    			});
