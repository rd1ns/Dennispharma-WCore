@model CityModel
@{
    ViewData["PageMainTitle"] = "İl Yönetimi";
    ViewData["PageTitle"] = "İl Ekle / Düzenle";
    ViewData["Title"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "common";
    ViewData["DeleteActionName"] = "delete";

    if (Model.Id == 0)
    {
        Model.CreatedOn = DateTime.Now;
        Model.UpdatedOn = DateTime.Now;
        Model.IsActive = true;
        Model.Deleted = false;
    }
    else
    {
        Model.UpdatedOn = DateTime.Now;
    }
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <form asp-action="CityAddOrEdit" asp-controller="@ViewData["ControllerName"]" enctype="multipart/form-data" id="CityForm">
                <div class="card card-custom">
                    <div class="card-header" style="">
                        <div class="card-title">
                            <h3 class="card-label">
                                @ViewData["PageTitle"] <i class="mr-2"></i>
                                <small class="">@ViewData["PageMainTitle"]</small>
                            </h3>
                        </div>
                        <div class="card-toolbar">
                            <partial name="_AddOrEditHeaderButtons" model="@Model.Id" />
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-12 my-2">
                                <!--begin::Group-->
                                <div class="form-group row">
                                    <WCore-label asp-for="CountryId" />
                                    <div class="col-lg-10 col-md-6 col-sm-12">
                                        <select asp-for="CountryId" class="form-control form-control-sm form-control-solid" required asp-items="Model.Countries"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <WCore-label asp-for="Name" />
                                    <div class="col-lg-10 col-md-8 col-sm-12">
                                        <WCore-editor asp-for="Name" asp-required="true" asp-type="form-control-lg form-control-solid" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <WCore-label asp-for="PlaqueCode" />
                                    <div class="col-lg-10 col-md-8 col-sm-12">
                                        <WCore-editor asp-for="PlaqueCode" asp-required="true" asp-type="form-control-lg form-control-solid" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <WCore-label asp-for="PhoneCode" />
                                    <div class="col-lg-10 col-md-8 col-sm-12">
                                        <WCore-editor asp-for="PhoneCode" asp-required="true" asp-type="form-control-lg form-control-solid" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <WCore-label asp-for="CreatedOn" />
                                    <div class="col-lg-10 col-md-8 col-sm-12">
                                        <WCore-editor asp-for="CreatedOn" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <WCore-label asp-for="UpdatedOn" />
                                    <div class="col-lg-10 col-md-8 col-sm-12">
                                        <WCore-editor asp-for="UpdatedOn" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <WCore-label asp-for="UserId" />
                                    <div class="col-lg-10 col-md-8 col-sm-12 pt-3">
                                        @Model.User.FirstName @Model.User.LastName
                                        <input asp-for="UserId" type="hidden" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <WCore-label asp-for="CreatedUserId" />
                                    <div class="col-lg-10 col-md-8 col-sm-12 pt-3">
                                        @Model.CreatedUser.FirstName @Model.CreatedUser.LastName
                                        <input asp-for="CreatedUserId" type="hidden" />
                                    </div>
                                </div>
                                <div class="form-group mb-0 row">
                                    <WCore-label asp-for="IsActive" />
                                    <div class="col-lg-10 col-md-8 col-sm-12">
                                        <div class="checkbox-inline">
                                            <label class="checkbox pt-3">
                                                <input asp-for="IsActive" />
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-0 row">
                                    <WCore-label asp-for="Deleted" />
                                    <div class="col-lg-10 col-md-8 col-sm-12">
                                        <div class="checkbox-inline">
                                            <label class="checkbox pt-3">
                                                <input asp-for="Deleted" />
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-0 row">
                                    <div class="col-lg-10 col-md-8 col-sm-12">

                                    </div>
                                </div>
                                <!--end::Group-->
                            </div>
                        </div>

                    </div>
                    <div class="card-footer text-right">
                        <partial name="_AddOrEditFooterButtons" model="@Model.Id" />
                    </div>
                </div>
            </form>
            @if (Model.Id != 0)
            {
                <div class="card card-custom mt-5">
                    <div class="card-header" style="">
                        <div class="card-title">
                            <h3 class="card-label">
                                İlçe Listesi <i class="mr-2"></i>
                                <small class="">@ViewData["PageMainTitle"]</small>
                            </h3>
                        </div>
                        <div class="card-toolbar">
                            <!--begin::Dropdown-->
                            <div class="dropdown dropdown-inline mr-2">
                                <button type="button" class="btn btn-light-primary font-weight-bolder dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-list"></i> Çıktı Al
                                </button>
                                <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                                    <ul class="navi flex-column navi-hover py-2">
                                        <li class="navi-item">
                                            <a href="#" id="export_print" class="navi-link">
                                                <span class="navi-icon"><i class="la la-print"></i></span>
                                                <span class="navi-text">Yazdır</span>
                                            </a>
                                        </li>
                                        <li class="navi-item">
                                            <a href="#" id="export_copy" class="navi-link">
                                                <span class="navi-icon"><i class="la la-copy"></i></span>
                                                <span class="navi-text">Kopyala</span>
                                            </a>
                                        </li>
                                        <li class="navi-item">
                                            <a href="#" id="export_excel" class="navi-link">
                                                <span class="navi-icon"><i class="la la-file-excel-o"></i></span>
                                                <span class="navi-text">Excel'e Aktar</span>
                                            </a>
                                        </li>
                                        <li class="navi-item">
                                            <a href="#" id="export_csv" class="navi-link">
                                                <span class="navi-icon"><i class="la la-file-text-o"></i></span>
                                                <span class="navi-text">CSV'ye Aktar</span>
                                            </a>
                                        </li>
                                        <li class="navi-item">
                                            <a href="#" id="export_pdf" class="navi-link">
                                                <span class="navi-icon"><i class="la la-file-pdf-o"></i></span>
                                                <span class="navi-text">PDF'e Aktar</span>
                                            </a>
                                        </li>
                                    </ul>
                                    <!--end::Navigation-->
                                </div>
                                <!--end::Dropdown Menu-->
                            </div>
                            <!--end::Dropdown-->
                            <a asp-action="cityaddoredit" asp-route-id="0" asp-route-countryid="@Model.CountryId" asp-route-cityid="@Model.Id" class="btn btn-success font-weight-bolder mr-2">
                                <i class="ki ki-plus icon-xs"></i>
                                Yeni İlçe Ekle
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-12">
                            <div id="district_datatable"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $("#CityForm").submit(function (e) {
            var id = @Model.Id;
            e.preventDefault();
            var form = $(this);
            var serialize = form.serialize();
            var url = form.attr('action');
            $.ajax({
                type: "POST",
                url: url,
                data: serialize,
                success: function (data) {
                    if (id == 0) {
                        window.location.href = "/common/countryaddoredit/@Model.CountryId";
                    }
                    else {
                        Swal.fire({
                            title: 'Başarılı',
                            text: "Listeye dönmek istermisiniz?",
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Evet',
                            cancelButtonText: 'Hayır',
                            timer: 3000,
                            timerProgressBar: true
                        }).then((result) => {
                            if (result.value) {
                                window.location.href = "/common/countryaddoredit/@Model.CountryId";
                            }
                        })
                    }
                }
            });
        });


        $(document).ready(function () {
            var districtDatatable = $("#district_datatable").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "/Common/GetDistrictFilteredItems?CountrtId=@Model.CountryId&CityId=@Model.Id",
                            type: "POST",
                            dataType: "json"
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "RecordsFiltered",
                        errors: "Errors"
                    },
                    requestEnd: function (e) {
                        if (e.type == "create" || e.type == "update") {
                            this.read();
                        }
                    },
                    error: function (e) {
                        display_kendoui_grid_error(e);
                        // Cancel the changes
                        this.cancelChanges();
                    },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                toolbar: ["excel", "search"],
                pageable: {
                    refresh: true,
                    pageSizes: [10, 15, 20, 50, 100, 200, 300, 500, 1000, 3000,"all"],
                    @Html.Partial("_GridPagerMessages")
                },
                scrollable: false,
                columns: [{
                    field: "Name",
                    title: "Adı",
                    filterable: true,
                },{
                    field: "Id",
                    title:"İşlemler",
                    width: 100,
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                        template: '<a href="/common/DistrictAddOrEdit/#=Id#" class="btn btn-sm btn-clean btn-icon" title="Edit details">\
                                    <i class="la la-edit"></i>\
                                </a>\
                                <a href="javascript:void(0)" data-id="#=Id#" class="btn btn-sm btn-clean btn-icon btnDistrictDelete" title="Delete">\
                                    <i class="la la-trash"></i>\
                                </a>'
                }]
            });
            $("body").on("click", "#district_datatable .btnDistrictDelete", function () {
                Swal.fire({
                    title: 'Eminmisiniz?',
                    text: "Kaydı silmek istediğiniz eminmisiniz?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet',
                    cancelButtonText: 'Hayır',
                    timer: 3000,
                    timerProgressBar: true
                }).then((result) => {
                    if (result.value) {
                        var id = $(this).attr("data-id");
                        console.log(id);
                        $.ajax({
                            type: "POST",
                            url: '/Common/DistrictAddOrEdit',
                            data: { id: id, delete: true },
                            success: function (data) {
                                districtDatatable.data("kendoGrid").dataSource.read();
                                Swal.fire({
                                    title: 'Başarılı',
                                    icon: 'success',
                                    showCancelButton: false,
                                    showConfirmButton: false,
                                    timer: 1000,
                                    timerProgressBar: true
                                });
                            },
                            error: function (d) {
                                console.log(d);
                            }
                        });
                    }
                })
            });
        });
    </script>
}