@model VendorModel
@{
    ViewData["PageMainTitle"] = T("Admin.Configuration.Vendors.Title");
    ViewData["PageTitle"] = Model.Id == 0 ? T("Admin.Configuration.Vendors.Add") : T("Admin.Configuration.Vendors.Edit");
    ViewData["SystemTitle"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "Vendor";

    @if (Model.Id == 0)
    {
        Model.DisplayOrder = 0;
    }
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="/admin/@ViewData["ControllerName"]" class="text-muted">
                                @ViewData["PageMainTitle"]
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            @if (Model.Id == 0)
                            {
                                <b>@T("admin.common.new")</b>
                            }
                            else
                            {
                                @Model.Name
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <partial name="_AddOrEditHeaderButtons" model="@Tuple.Create(Model.Id,"VendorForm")" />
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <div class="card card-custom">
                <div class="card-body">
                    <WCore-tabs id="activity-edit" asp-tab-name-to-select="tab-details" asp-render-selected-tab-input="false">
                        <WCore-tab asp-name="tab-details" asp-title="@T("Admin.Configuration.Details")" asp-default="true">
                            <form id="VendorForm" asp-action="AddOrEdit" asp-controller="@ViewData["ControllerName"]" enctype="multipart/form-data">
                                @(Html.LocalizedEditor<WCore.Web.Areas.Admin.Models.Vendors.VendorModel, WCore.Web.Areas.Admin.Models.Vendors.VendorLocalizedModel>("skiresort-localized",
                                @<div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Locales[item].Name" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].Name"  asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="Locales[item].Description" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].Description" asp-template="RichEditor" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Locales[item].MetaTitle" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].MetaTitle"  asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Locales[item].MetaDescription" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].MetaDescription"  asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Locales[item].MetaKeywords" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].MetaKeywords"  asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Locales[item].SeName" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Locales[item].SeName" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                     <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                                </div>,
                                @<div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Name" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Name"   asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="Email" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Email" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="MetaTitle" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="MetaTitle" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="MetaDescription" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="MetaDescription" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="MetaKeywords" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="MetaKeywords" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <WCore-label asp-for="Description" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="Description"  asp-template="RichEditor"  />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="SeName" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="SeName" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <WCore-label asp-for="DisplayOrder" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <WCore-editor asp-for="DisplayOrder" asp-type="form-control form-control-sm form-control-solid" />
                                        </div>
                                    </div>
                                    <div class="form-group mb-0 row">
                                        <WCore-label asp-for="IsActive" />
                                        <div class="col-lg-10 col-md-6 col-sm-12">
                                            <div class="checkbox-inline">
                                                <label class="checkbox pt-3">
