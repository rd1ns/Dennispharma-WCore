@{
    var _workContext = EngineContext.Current.Resolve<IWorkContext>();
    var _themeContext = EngineContext.Current.Resolve<IThemeContext>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_Head" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <input type="hidden" name="WorkingCurrency" id="WorkingCurrency" value="@_workContext.WorkingCurrency.Id" />
    <input type="hidden" name="WorkingLanguage" id="WorkingLanguage" value="@_workContext.WorkingLanguage.Id" />
    <input type="hidden" name="WorkingTheme" id="WorkingTheme" value="@_themeContext.WorkingThemeName" />
    <div class="overlay"></div>
    <div id="page">
        <partial name="_Header" />
        @RenderBody()
        @await Component.InvokeAsync("Footer")
    </div>
    <partial name="_Bottom" />
    @RenderSection("Scripts", required: false)
</body>
</html>
