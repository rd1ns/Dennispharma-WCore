@model UserRegistrationFormSearchModel
@{
    ViewData["PageMainTitle"] = T("Admin.Configuration.UserRegistrationForms.Title");
    ViewData["PageTitle"] = T("Admin.Configuration.UserRegistrationForms.List");
    ViewData["SystemTitle"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "UserRegistrationForm";
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">
                                @ViewData["PageMainTitle"]
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">              
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-xl-12 my-2">
                            <div class="form-group row">
                                <div class="col-lg-12 col-md-12 col-sm-12 text-right">
                                    <button class="btn btn-default btn-sm" type="button" id="btnClearSearch"><i class="fa fa-broom"></i> @T("admin.common.clearsearch")</button>
                                    <button class="btn btn-primary btn-sm" type="button" id="btnSearch"><i class="fa fa-search"></i> @T("admin.common.search")</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="userRegistrationForm_datatable"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var userRegistrationFormDatatable = $("#userRegistrationForm_datatable").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "/Admin/UserRegistrationForm/GetFilteredItems",
                            type: "POST",
                            dataType: "json",
                            data: additionalData
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "RecordsFiltered",
                        errors: "Errors"
                    },
                    requestEnd: function (e) {
                        if (e.type == "create" || e.type == "update") {
                            this.read();
                        }
                    },
                    error: function (e) {
                        console.userRegistrationForm(e);
                        this.cancelChanges();
                    },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                pageable: {
                    refresh: true,
                    pageSizes: [10, 15, 20, 50, 100, 200, 300, 500, 1000, 3000],
                    @Html.Partial("_GridPagerMessages")
                },
                filterable: true,
                scrollable: false,
                columns: [
                    {
                        title: "@T("Admin.Configuration.UserRegistrationForm.Title")",
                        field: "Title",
                        template: '<a href="/admin/userRegistrationForm/addoredit/#=Id#" class="btn btn-sm btn-link" title="Edit details"><i class="la la-edit"></i> #=Title#</a>'
                    },
                    {
                        title: "@T("Admin.Configuration.UserRegistrationForm.FirstName")",
                        field: "FirstName"
                    },
                    {
                        title: "@T("Admin.Configuration.UserRegistrationForm.LastName")",
                        field: "LastName"
                    },
                    {
                        title: "@T("Admin.Configuration.UserRegistrationForm.CreatedOn")",
                        field: "CreatedOn"
                    },
                    {
                        field: "Id",
                        title: "@T("admin.common.delete")",
                        width: 80,
                        filterable: false,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '<a href="javascript:void(0)" data-id="#=Id#" class="btn btn-sm btn-clean btn-icon btnDelete" title="Delete">\
                                        <i class="la la-trash"></i>\
                                    </a>'
                    }
                ]
            });

            $("body").on("click", "#userRegistrationForm_datatable .btnDelete", function () {
                Swal.fire({
                    title: 'Eminmisiniz?',
                    text: "Kaydı silmek istediğiniz eminmisiniz?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet',
                    cancelButtonText: 'Hayır',
                    timer: 3000,
                    timerProgressBar: true
                }).then((result) => {
                    if (result.value) {
                        var id = $(this).attr("data-id");
                        $.ajax({
                            type: "POST",
                            url: '/admin/userRegistrationForm/AddOrEdit',
                            data: { id: id, delete: true },
                            success: function (data) {
                                userRegistrationFormDatatable.data("kendoGrid").dataSource.read();
                                Swal.fire({
                                    title: 'Başarılı',
                                    icon: 'success',
                                    showCancelButton: false,
                                    showConfirmButton: false,
                                    timer: 1000,
                                    timerProgressBar: true
                                });
                            },
                            error: function (d) {
                                console.userRegistrationForm(d);
                            }
                        });
                    }
                })
            });

            $("body").on("click", ".btnClearAll", function () {
                $.ajax({
                    type: "POST",
                    url: '/admin/userRegistrationForm/AddOrEdit',
                    data: { Id: 5, deleteAll: true },
                    success: function (data) {
                        userRegistrationFormDatatable.data("kendoGrid").dataSource.read();
                        Swal.fire({
                            title: 'Günlük temizlendi.',
                            icon: 'success',
                            showCancelButton: false,
                            showConfirmButton: false,
                            timer: 1000,
                            timerProgressBar: true
                        }).then(() => {
                            $("#UserRegistrationFormLevel").val("");
                            var grid = $('#userRegistrationForm_datatable').data('kendoGrid');
                            grid.dataSource.page(1);
                            return false;
                        })

                    },
                    error: function (d) {
                        console.userRegistrationForm(d);
                    }
                });
            });


            $('#btnSearch').click(function () {
                var grid = $('#userRegistrationForm_datatable').data('kendoGrid');
                grid.dataSource.page(1);
                return false;
            });
            $('#btnClearSearch').click(function () {
                $("#UserRegistrationFormLevel").val("");

                var grid = $('#userRegistrationForm_datatable').data('kendoGrid');
                grid.dataSource.page(1);
                return false;
            });
            function additionalData() {
                var data = {};
                addAntiForgeryToken(data);
                return data;
            }
        });
    </script>
}