@inject SeoSettings _seoSettings
@inject IWebHelper _webHelper
@inject WCore.Core.IWorkContext _workContext

@model NewsViewModel
@{
    ViewBag.Title = Model.News.Title;
    ViewBag.MetaTitle = Model.News.MetaTitle;
    ViewBag.MetaKeywords = Model.News.MetaKeywords;
    ViewBag.MetaDescription = Model.News.MetaDescription;

    @if (_seoSettings.TwitterMetaTags)
    {
        ViewBag.TwtterCard = "";
        ViewBag.TwtterTitle = Model.News.MetaTitle;
        ViewBag.TwtterDescription = Model.News.MetaDescription;
        ViewBag.TwtterUrl = _webHelper.GetThisPageUrl(true);
        ViewBag.TwtterImage = _webHelper.GetStoreLocation().Substring(0, _webHelper.GetStoreLocation().Length - 1) + Model.News.Image;
    }

    @if (_seoSettings.OpenGraphMetaTags)
    {
        ViewBag.OgTitle = Model.News.MetaTitle;
        ViewBag.OgDescription = Model.News.MetaDescription;
        ViewBag.OgUrl = _webHelper.GetStoreLocation();
        ViewBag.OgImage = _webHelper.GetStoreLocation().Substring(0, _webHelper.GetStoreLocation().Length - 1) + Model.News.Image;
    }
}
<!--=================================
page-title-->

@await Component.InvokeAsync("PageTitle", Model.News.PageTitle)
<!--=================================
page-title -->  
<!--=================================
content -->

<section class="blog blog-single white-bg page-section-ptb">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="sidebar-widget">
                    <h6 class="mb-20">@T("Common.Search")</h6>
                    <div class="widget-search">
                        <i class="fa fa-search"></i>
                        <input type="search" class="form-control" placeholder="@T("Common.News.Search")">
                    </div>
                </div>
                <div class="sidebar-widget">
                    <h6 class="mt-40 mb-20">@T("Common.News.RecentPosts")</h6>
                    @foreach (var item in Model.RecentNewsList.Newses)
                    {

                        <div class="recent-post clearfix">
                            <div class="recent-post-image">
                                <img class="img-fluid" src="@item.Image" alt="">
                            </div>
                            <div class="recent-post-info">
                                <a href="/@_workContext.WorkingLanguage.UniqueSeoCode/@item.SeName">@item.Title</a>
                                <span><i class="fa fa-calendar-o"></i> @item.CreatedOn.ToString("dddd MM, yyyy")</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="sidebar-widget clearfix">
                    <h6 class="mt-40 mb-20">@T("Common.News.Categories")</h6>
                    <ul class="widget-categories">
                        @foreach (var item in Model.NewsCategoryList.NewsCategories)
                        {

                            <li><a href="/@_workContext.WorkingLanguage.UniqueSeoCode/@item.SeName"><i class="fa fa-angle-double-right"></i> @item.Title</a></li>
                        }
                    </ul>
                </div>
            </div>
            <!-- ========================== -->
            <div class="col-lg-9">
                <div class="blog-entry mb-10">
                    <div class="blog-detail">
                        <div class="entry-meta mb-10">
                            <ul>
                                <li> <i class="fa fa-folder-open-o"></i> <a href="/@_workContext.WorkingLanguage.UniqueSeoCode/@Model.News.NewsCategory.SeName"> @Model.News.NewsCategory.Title </a> </li>
                                <li><a href="#"><i class="fa fa-calendar-o"></i> @Model.News.CreatedOn.ToString("dd MMM yyyy")</a></li>
                            </ul>
                        </div>
                        <div class="entry-content">
                            @Html.Raw(Model.News.Body)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>