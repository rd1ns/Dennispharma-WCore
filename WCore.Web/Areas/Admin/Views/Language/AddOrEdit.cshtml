@model LanguageModel
@{
    ViewData["PageMainTitle"] = T("Admin.Configuration.Languages.Title");
    ViewData["PageTitle"] = Model.Id == 0 ? T("Admin.Configuration.Languages.Add") : T("Admin.Configuration.Languages.Edit");
    ViewData["SystemTitle"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "Language";

    @if (Model.Id == 0)
    {
        Model.Published = true;
        Model.DisplayOrder = 0;
    }
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="/admin/@ViewData["ControllerName"]" class="text-muted">
                                @ViewData["PageMainTitle"]
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            @if (Model.Id == 0)
                            {
                                <b>@T("admin.common.new")</b>
                            }
                            else
                            {
                                @Model.Name
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <partial name="_AddOrEditHeaderButtons" model="@Tuple.Create(Model.Id,"LanguageForm")" />
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <div class="card card-custom">
                <div class="card-body">
                    <WCore-tabs id="skiresort-edit" asp-tab-name-to-select="tab-details" asp-render-selected-tab-input="false">
                        <WCore-tab asp-name="tab-details" asp-title="@T("Admin.Configuration.Details")" asp-default="true">
                            <form id="LanguageForm" asp-action="AddOrEdit" asp-controller="@ViewData["ControllerName"]" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-xl-12 my-2">
                                        <div class="form-group row">
                                            <WCore-label asp-for="Name" />
                                            <div class="col-9">
                                                <WCore-editor asp-for="Name" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="LanguageCulture" />
                                            <div class="col-9">
                                                <WCore-editor asp-for="LanguageCulture" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="UniqueSeoCode" />
                                            <div class="col-9">
                                                <WCore-editor asp-for="UniqueSeoCode" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="FlagImageFileName" />
                                            <div class="col-9">
                                                <WCore-editor asp-for="FlagImageFileName" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="DefaultCurrencyId" />
                                            <div class="col-9">
                                                <WCore-select asp-for="DefaultCurrencyId" asp-items="Model.Currencies" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="DisplayOrder" />
                                            <div class="col-9">
                                                <WCore-editor asp-for="DisplayOrder" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="Rtl" />
                                            <div class="col-9">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="Rtl" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="Published" />
                                            <div class="col-9">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="Published" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="IsDefault" />
                                            <div class="col-9">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="IsDefault" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="IsAdminDefault" />
                                            <div class="col-9">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="IsAdminDefault" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="AllowSelection" />
                                            <div class="col-9">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="AllowSelection" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <!--end::Group-->
                                    </div>
                                </div>
                                <input type="hidden" asp-for="Id" />
                            </form>
                        </WCore-tab>
                        @if (Model.Id != 0)
                        {
                            <WCore-tab asp-name="tab-search" asp-title="@T("Admin.Configuration.Languages.Resources")">
                                <div class="row">
                                    <div class="col-xl-12 my-2">
                                        <div class="form-group row">
                                            <WCore-label asp-for="LocaleResourceSearchModel.SearchResourceName" />
                                            <div class="col-9">
                                                <WCore-editor asp-for="LocaleResourceSearchModel.SearchResourceName" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="LocaleResourceSearchModel.SearchResourceValue" />
                                            <div class="col-9">
                                                <WCore-editor asp-for="LocaleResourceSearchModel.SearchResourceValue" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-2 control-label text-lg-right pt-2"></label>
                                            <div class="col-md-9">
                                                <button class="btn btn-primary btn-sm" type="button" id="SearchLanguageResource"><i class="fa fa-search"></i> @T("admin.common.search")</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-12 my-2">
                                        <div id="resources_datatable"></div>
                                    </div>
                                </div>
                            </WCore-tab>
                        }
                    </WCore-tabs>                    
                </div>
            </div>
            
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $("#LanguageForm").submit(function (e) {

            e.preventDefault();
            var data = new FormData();


            //Form data
            var form_data = $('#LanguageForm').serializeArray();
            $.each(form_data, function (key, input) {
                data.append(input.name, input.value);
            });

            var url = $(this).attr('action');
            var id = @Model.Id;
            $.ajax({
                type: "POST",
                url: "/admin/"+url,
                processData: false,
                contentType: false,
                data: data,
                success: function (data) {
                    if (id == 0) {
                        window.location.href = "/admin/@ViewData["ControllerName"]";
                    }
                    else if (!data.continueEditing) {
                        Swal.fire({
                            title: 'Başarılı',
                            text: "Listeye dönmek istermisiniz?",
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Evet',
                            cancelButtonText: 'Hayır',
                            timer: 3000,
                            timerProgressBar: true
                        }).then((result) => {
                            if (result.value) {
                                window.location.href = "/admin/@ViewData["ControllerName"]";
                            }
                        })
                    }
                }
            });
        });
        @if (Model.Id != 0)
        {
            <text>
                $(function () {
                    $('#SearchLanguageResource').click(function () {
                    var grid = $('#resources_datatable').data('kendoGrid');
                    grid.dataSource.page(1);
                    return false;
                });
                function additionalData() {
                    var data = {
                        "SearchResourceName": $("#LocaleResourceSearchModel_SearchResourceName").val(),
                        "SearchResourceValue": $("#LocaleResourceSearchModel_SearchResourceValue").val(),
                        "LanguageId" : @Model.Id
                    };
                    addAntiForgeryToken(data);
                    return data;
                }
                $(function () {
                    $("#resources_datatable").kendoGrid({
                        dataSource: {
                            type: "json",
                            transport: {
                                read: {
                                    url: "/admin/language/resources?LanguageId=@Model.Id",
                                    type: "POST",
                                    dataType: "json",
                                    data: additionalData
                                },
                                create: {
                                    url: "/admin/language/ResourceAdd?LanguageId=@Model.Id",
                                    type: "POST",
                                    dataType: "json",
                                    data: addAntiForgeryToken
                                },
                                update: {
                                    url: "/admin/language/ResourceUpdate?LanguageId=@Model.Id",
                                    type: "POST",
                                    dataType: "json",
                                    data: addAntiForgeryToken
                                },
                                destroy: {
                                    url: "/admin/language/ResourceDelete",
                                    type: "POST",
                                    dataType: "json",
                                    data: addAntiForgeryToken
                                },
                                parameterMap: function (data, operation) {
                                    if (operation == "read") {
                                        return data;
                                    } else {
                                        return "ResourceName=" + data.models[0].ResourceName + "&ResourceValue=" + data.models[0].ResourceValue + "&LanguageId=" + @Model.Id + "&Id=" + data.models[0].Id +"";
                                    }
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "RecordsFiltered",
                                errors: "Errors",
                                model: {
                                    id: "Id",
                                    fields: {
                                        ResourceName: { editable: true, type: "string" },
                                        ResourceValue: { editable: true, type: "string" },
                                        Id: { editable: false, type: "number" }
                                    }
                                }
                            },
                            requestEnd: function (e) {
                                if (e.type == "create" || e.type == "update") {
                                    this.read();
                                }
                            },
                            batch: true,
                            error: function (e) {
                                display_kendoui_grid_error(e);
                                // Cancel the changes
                                this.cancelChanges();
                            },
                            pageSize: 50,
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        filterable: true,
                        pageable: {
                            refresh: true,
                            pageSizes: [10, 15, 20, 50, 100, 200, 300, 500, 1000, 3000],
                            @Html.Partial("_GridPagerMessages")
                        },
                        toolbar: [{ name: "create", text: "@T("Admin.Common.AddNewRecord")" }],
                        scrollable: false,
                        editable: {
                            confirmation: "@T("Admin.Common.DeleteConfirmation")",
                            mode: "inline"
                        },
                        columns: [
                            {
                                field: "ResourceName",
                                title: "@T("Admin.Configuration.Languages.Resources.SearchResourceName")",
                                width: 300
                            }, {
                                field: "ResourceValue",
                                title: "@T("Admin.Configuration.Languages.Resources.SearchResourceValue")",
                                width: 300

                            }, {
                                command: [
                                    {
                                        name: "edit",
                                        text: {
                                            edit: "@T("Admin.Common.Edit")",
                                            update: "@T("Admin.Common.Update")",
                                            cancel: "@T("Admin.Common.Cancel")"
                                        }
                                    }, {
                                        name: "destroy",
                                        text: "@T("Admin.Common.Delete")"
                                    }
                                ],
                                width: 200
                            }
                        ]
                    });
                });
        })
            </text>
        }
    </script>
}