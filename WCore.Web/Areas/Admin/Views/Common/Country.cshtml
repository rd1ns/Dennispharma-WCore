@model CountrySearchModel 
@{
    ViewData["PageMainTitle"] = "Ülke Yönetimi";
    ViewData["PageTitle"] = "Ülke Listesi";
    ViewData["Title"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">
                                @ViewData["PageMainTitle"]
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-xl-12 my-2">
                            <div class="form-group row">
                                <WCore-label asp-for="Name" />
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <WCore-editor asp-for="Name" asp-type="form-control form-control-sm form-control-solid" />
                                </div>
                                <WCore-label asp-for="Published" />
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <select id="Published" name="Published" class="form-control form-control-sm form-control-solid">
                                        <option value="">@T("admin.configuration.all")</option>
                                        <option selected value="true">@T("admin.configuration.true")</option>
                                        <option value="false">@T("admin.configuration.false")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <WCore-label asp-for="IsActive" />
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <select id="IsActive" name="IsActive" class="form-control form-control-sm form-control-solid">
                                        <option value="">@T("admin.configuration.all")</option>
                                        <option selected value="true">@T("admin.configuration.true")</option>
                                        <option value="false">@T("admin.configuration.false")</option>
                                    </select>
                                </div>
                                <WCore-label asp-for="Deleted" />
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <select id="Deleted" name="Deleted" class="form-control form-control-sm form-control-solid">
                                        <option value="">@T("admin.configuration.all")</option>
                                        <option value="true">@T("admin.configuration.true")</option>
                                        <option selected value="false">@T("admin.configuration.false")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12 col-md-6 col-sm-12 text-right">
                                    <button class="btn btn-default btn-sm" type="button" id="btnClearSearch"><i class="fa fa-broom"></i> @T("admin.common.clearsearch")</button>
                                    <button class="btn btn-primary btn-sm" type="button" id="btnSearch"><i class="fa fa-search"></i> @T("admin.common.search")</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="country_datatable"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var countryDatatable = $("#country_datatable").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "/Admin/Common/GetCountryFilteredItems",
                            type: "POST",
                            dataType: "json",
                            data: function () {
                                var data = {
                                    "Name": $("#Name").val(),
                                    "IsActive": $("#IsActive").val(),
                                    "Published": $("#Published").val(),
                                    "Deleted": $("#Deleted").val()
                                };
                                addAntiForgeryToken(data);
                                return data;
                            }
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "RecordsFiltered",
                        errors: "Errors"
                    },
                    requestEnd: function (e) {
                        if (e.type == "create" || e.type == "update") {
                            this.read();
                        }
                    },
                    error: function (e) {
                        console.log(e);
                        // Cancel the changes
                        this.cancelChanges();
                    },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                pageable: {
                    refresh: true,
                    pageSizes: [10, 15, 20, 50, 100, 200, 300, 500, 1000, 3000,"all"],
                    @Html.Partial("_GridPagerMessages")
                },
                scrollable: false,
                columns: [
                    {
                        field: "Name",
                        title: "@T("Admin.Configuration.Name")",
                        template: '<a href="/admin/common/CountryAddOrEdit/#=Id#" class="btn btn-sm btn-clean" title="Edit details">\
                                        <i class="la la-edit"></i> #=Name#\
                                    </a>'
                    },
                    {
                        field: "TwoLetterIsoCode",
                        title: "@T("Admin.Configuration.TwoLetterIsoCode")"
                    },
                    {
                        field: "ThreeLetterIsoCode",
                        title: "@T("Admin.Configuration.ThreeLetterIsoCode")"
                    },
                    {
                        field: "NumericIsoCode",
                        title: "@T("Admin.Configuration.NumericIsoCode")"
                    },
                    {
                        field: "LanguageCode",
                        title: "@T("Admin.Configuration.LanguageCode")"
                    },
                    {
                        field: "PhoneCode",
                        title: "@T("Admin.Configuration.PhoneCode")"
                    },
                    {
                        field: "ShortCode",
                        title: "@T("Admin.Configuration.ShortCode")"
                    },
                    {
                        field: "Published",
                        title: "@T("Admin.Configuration.Published")",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '# if(Published) {# <span class="btn btn-sm btn-success">@T("admin.configuration.true")</span> #} else {# <span class="btn btn-sm btn-danger">@T("admin.configuration.false")</span> #} #',
                        width: 80,
                        filterable: false
                    },
                    {
                        field: "IsActive",
                        title: "@T("Admin.Configuration.IsActive")",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '# if(IsActive) {# <span class="btn btn-sm btn-success">@T("admin.configuration.true")</span> #} else {# <span class="btn btn-sm btn-danger">@T("admin.configuration.false")</span> #} #',
                        width: 80,
                        filterable: false
                    },
                    {
                        field: "Deleted",
                        title: "@T("Admin.Configuration.Deleted")",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '# if(Deleted) {# <span class="btn btn-sm btn-success">@T("admin.configuration.true")</span> #} else {# <span class="btn btn-sm btn-danger">@T("admin.configuration.false")</span> #} #',
                        width: 80,
                        filterable: false
                    },
                    {
                        field: "Id",
                        title:"İşlemler",
                        width: 100,
                        filterable: false,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                            template: '<a href="javascript:void(0)" data-id="#=Id#" class="btn btn-sm btn-clean btn-icon btnCountryDelete" title="Delete">\
                                            <i class="l a la-trash"></i>\
                                        </a>'
                }]
            });

            $("body").on("click", "#country_datatable .btnCountryDelete", function () {
                Swal.fire({
                    title: 'Eminmisiniz?',
                    text: "Kaydı silmek istediğiniz eminmisiniz?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet',
                    cancelButtonText: 'Hayır',
                    timer: 3000,
                    timerProgressBar: true
                }).then((result) => {
                    console.log(result);
                    if (result.value) {
                        var id = $(this).attr("data-id");
                        console.log(id);
                        $.ajax({
                            type: "POST",
                            url: '/Common/CountryAddOrEdit',
                            data: { id: id, delete: true },
                            success: function (data) {
                                countryDatatable.data("kendoGrid").dataSource.read();
                                Swal.fire({
                                    title: 'Başarılı',
                                    icon: 'success',
                                    showCancelButton: false,
                                    showConfirmButton: false,
                                    timer: 1000,
                                    timerProgressBar: true
                                });
                            },
                            error: function (d) {
                                console.log(d);
                            }
                        });
                    }
                })
            });

            $('#btnSearch').click(function () {
                var grid = $('#country_datatable').data('kendoGrid');
                grid.dataSource.page(1);
                return false;
            });
            $('#btnClearSearch').click(function () {
                $("#Name").val("");
                var grid = $('#country_datatable').data('kendoGrid');
                grid.dataSource.page(1);
                return false;
            });
            function additionalData() {
                var data = {};
                addAntiForgeryToken(data);
                return data;
            }
        });
    </script>
}