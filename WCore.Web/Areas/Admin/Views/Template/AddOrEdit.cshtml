@model TemplateModel
@{
    ViewData["PageMainTitle"] = T("Admin.Configuration.Templates.Title");
    ViewData["PageTitle"] = Model.Id == 0 ? T("Admin.Configuration.Templates.Add") : T("Admin.Configuration.Templates.Edit");
    ViewData["SystemTitle"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "Template";

    if (Model.Id == 0)
    {
        Model.CreatedOn = DateTime.Now;
        Model.UpdatedOn = DateTime.Now;
    }
    else
    {
        Model.UpdatedOn = DateTime.Now;
    }
    Model.Title = "asdf";
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="/admin/@ViewData["ControllerName"]" class="text-muted">
                                @ViewData["PageMainTitle"]
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            @if (Model.Id == 0)
                            {
                                <b>@T("admin.common.new")</b>
                            }
                            else
                            {
                                @Model.Title
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <partial name="_AddOrEditHeaderButtons" model="@Tuple.Create(Model.Id,"SkiSchoolForm")" />
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <form id="TemplateForm" asp-action="AddOrEdit" asp-controller="@ViewData["ControllerName"]" enctype="multipart/form-data">
                <div class="card card-custom">
                    <div class="card-body">
                        <ul class="nav nav-tabs nav-bold nav-tabs-line nav-tabs-line-3x mb-5">
                            <li class="nav-item mr-3">
                                <a class="nav-link active" data-toggle="tab" href="#kt_user_edit_tab_1">
                                    <span class="nav-icon text-center">
                                        <i class="fa fa-pen"></i>
                                    </span>
                                    <span class="nav-text font-size-lg">Detaylar</span>
                                </a>
                            </li>
                            <li class="nav-item mr-3">
                                <a class="nav-link" data-toggle="tab" href="#kt_user_edit_tab_2">
                                    <span class="nav-icon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <span class="nav-text font-size-lg">Kayıt Bilgisi</span>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane show active px-7" id="kt_user_edit_tab_1" role="tabpanel">
                                <!--begin::Row-->
                                <div class="row">

                                    <div class="col-xl-12 my-2">
                                        <!--begin::Group-->
                                        <div class="form-group row">
                                            <WCore-label asp-for="Title" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <input asp-for="Title" class="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="Body" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <textarea asp-for="Body" class="editor form-control form-control-sm form-control-solid"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="TemplateType" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <select asp-for="TemplateType"
                                                        class="form-control form-control-sm form-control-solid"
                                                        asp-items="Html.GetEnumValueSelectList<WCore.Core.Domain.Templates.TemplateType>()">
                                                </select>
                                            </div>
                                        </div>
                                        <input type="hidden" asp-for="Id" />
                                        <!--end::Group-->
                                    </div>
                                </div>
                                <!--end::Row-->
                            </div>
                            <div class="tab-pane px-7" id="kt_user_edit_tab_2" role="tabpanel">
                                <!--begin::Row-->
                                <div class="row">
                                    <div class="col-xl-12">


                                        <div class="form-group row">
                                            <WCore-label asp-for="CreatedOn" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <WCore-editor asp-for="CreatedOn" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="UpdatedOn" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <WCore-editor asp-for="UpdatedOn" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="UserId" />
                                            <div class="col-lg-10 col-md-6 col-sm-12 pt-3">
                                                @Model.User.FirstName @Model.User.LastName
                                                <input asp-for="UserId" type="hidden" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="CreatedUserId" />
                                            <div class="col-lg-10 col-md-6 col-sm-12 pt-3">
                                                @Model.CreatedUser.FirstName @Model.CreatedUser.LastName
                                                <input asp-for="CreatedUserId" type="hidden" />
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="IsActive" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="IsActive" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="Deleted" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="Deleted" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="IsSystemTemplate" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="IsSystemTemplate" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!--end::UserPage-->
        </div>
        <!--end::Container-->
    </div>
</div>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/hffsghwaq506ibfnesaxs8e1ulx7o37984yqlsjhackps4jv/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        $("#TemplateForm").submit(function (e) {
            e.preventDefault();
            var form = $(this);
            var serialize = form.serialize();
            var url = form.attr('action');
            $.ajax({
                type: "POST",
                url: url,
                data: serialize,
                success: function (data) {
                    if (!data.continueEditing) {
                        Swal.fire({
                            title: 'Başarılı',
                            text: "Listeye dönmek istermisiniz?",
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Evet',
                            cancelButtonText: 'Hayır',
                            timer: 3000,
                            timerProgressBar: true
                        }).then((result) => {
                            if (result.value) {
                                window.location.href = "/@ViewData["ControllerName"]";
                            }
                        })
                    }
                }
            });
        });

    </script>
}