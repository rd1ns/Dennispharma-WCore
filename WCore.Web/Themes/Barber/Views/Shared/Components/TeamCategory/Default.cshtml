@model TeamCategoryModel
@{

    var _workContext = EngineContext.Current.Resolve<IWorkContext>();
    var _themeProvider = EngineContext.Current.Resolve<IThemeProvider>();
    var _seoSettings = EngineContext.Current.Resolve<SeoSettings>();
    var _storeInformationSettings = EngineContext.Current.Resolve<StoreInformationSettings>();
    var teamIndex = 0;

}

@if (Model != null)
{
    <section class="white-bg blog page-section-ptb">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Teams.Teams)
                {
                    <div class="col-lg-3">
                        <div class="team team-hover border">
                            <div class="team-photo">
                                <img class="img-fluid mx-auto" src="@item.Image" alt="">
                            </div>
                            <div class="team-description">
                                <div class="team-info">
                                    <h5><a href="#"> @item.Name @item.Surname</a></h5>
                                    <span>@item.Title</span>
                                </div>
                                <div class="social-icons color clearfix">
                                    <ul>
                                        <li class="social-facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
                                        <li class="social-twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
                                        <li class="social-instagram"><a href="#"><i class="fa fa-instagram"></i></a></li>
                                        <li class="social-linkedin"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}