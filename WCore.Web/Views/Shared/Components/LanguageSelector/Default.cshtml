@model LanguageSelectorModel

@inject WCore.Core.IWebHelper webHelper


@if (Model.AvailableLanguages.Count > 1)
{
    var returnUrl = webHelper.GetRawUrl(Context.Request);
    if (Model.UseImages)
    {
        <li>
            <span>
                <a href="#"><img class="pr-1" src="@Url.Content("~/images/flags/" + Model.CurrentLanguage.FlagImageFileName)" alt="@Model.CurrentLanguage.Name">@Model.CurrentLanguage.Name</a>
            </span>
            <ul class="drop-down-multilevel left-side">
                @foreach (var lang in Model.AvailableLanguages)
                {
                    <li>
                        <span>
                            <a href="@Url.RouteUrl("ChangeLanguage", new { langid = lang.Id, returnUrl }, webHelper.CurrentRequestProtocol)" title="@lang.Name">
                                <img class="pr-1" title='@lang.Name' alt='@lang.Name' @(lang.Id == Model.CurrentLanguage.Id ? " class=selected" : null) src="@Url.Content("~/images/flags/" + @lang.FlagImageFileName) " />
                                @lang.Name
                            </a>
                        </span>
                    </li>
                }
            </ul>
        </li>

    }
    else
    {
        <li>
            <span>
                <a href="#" class="pl-0">@Model.CurrentLanguage.Name</a>
            </span>
        </li>
        <ul class="drop-down-multilevel left-side">
            @foreach (var lang in Model.AvailableLanguages)
            {
                <li>
                    <span>
                        <a href="@Url.RouteUrl("ChangeLanguage", new { langid = lang.Id, returnUrl }, webHelper.CurrentRequestProtocol)" title="@lang.Name">@lang.Name</a>
                    </span>
                </li>
            }
        </ul>
    }
}