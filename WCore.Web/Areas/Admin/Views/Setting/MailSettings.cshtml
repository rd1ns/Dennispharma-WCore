@model MailSettingsModel
@{

    ViewData["PageMainTitle"] = T("Admin.Configuration.Settings");
    ViewData["PageTitle"] = T("admin.configuration.settings.mail.title");
    ViewData["SystemTitle"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "Setting";
    ViewData["ActionName"] = "MailSettings";
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            @ViewData["PageMainTitle"]
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <partial name="_AddOrEditHeaderButtons" model="@Tuple.Create(0,"MailSettingForm")" />
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <form id="MailSettingForm" action="/admin/@ViewData["ControllerName"]/@ViewData["ActionName"]" method="post" enctype="multipart/form-data">
                <div class="card card-custom">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-12 my-2">
                                <div class="form-group row ">
                                    <WCore-label asp-for="HostName" />
                                    <div class="col-lg-10 col-md-6 col-sm-12">
                                        <WCore-editor asp-for="HostName" asp-required="true" />
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    <WCore-label asp-for="PortNumber" />
                                    <div class="col-lg-10 col-md-6 col-sm-12">
                                        <WCore-editor asp-for="PortNumber" asp-required="true" />
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    <WCore-label asp-for="EmailAddress" />
                                    <div class="col-lg-10 col-md-6 col-sm-12">
                                        <WCore-editor asp-for="EmailAddress" asp-required="true" />
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    <WCore-label asp-for="EmailPassword" />
                                    <div class="col-lg-10 col-md-6 col-sm-12">
                                        <WCore-editor asp-for="EmailPassword" asp-required="true" />
                                    </div>
                                </div>


                                <div class="form-group row ">
                                    <WCore-label asp-for="UseSSL" />
                                    <div class="col-lg-10 col-md-6 col-sm-12">
                                        <div class="checkbox-inline">
                                            <label class="checkbox pt-3">
                                                <input asp-for="UseSSL" />
                                                <span></span>
                                            </label>
                                        </div>
                                        <span asp-validation-for="UseSSL"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>