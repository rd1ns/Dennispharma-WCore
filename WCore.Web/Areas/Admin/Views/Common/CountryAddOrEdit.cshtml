@model CountryModel
@{
    ViewData["PageMainTitle"] = "Ülke Yönetimi";
    ViewData["PageTitle"] = "Ülke Ekle / Düzenle";
    ViewData["Title"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "common";
    ViewData["DeleteActionName"] = "delete";

    if (Model.Id == 0)
    {
        Model.CreatedOn = DateTime.Now;
        Model.UpdatedOn = DateTime.Now;
        Model.IsActive = true;
        Model.Deleted = false;
    }
    else
    {
        Model.UpdatedOn = DateTime.Now;
    }
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @ViewData["PageTitle"]
                    </h5>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="/admin/@ViewData["ControllerName"]/country" class="text-muted">
                                @ViewData["PageMainTitle"]
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            @if (Model.Id == 0)
                            {
                                <b>@T("admin.common.new")</b>
                            }
                            else
                            {
                                @Model.Name
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <partial name="_AddOrEditHeaderButtons" model="@Tuple.Create(Model.Id,"CountryForm")" />
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <div class="card card-custom">
                <div class="card-body">
                    <WCore-tabs id="country-edit" asp-tab-name-to-select="tab-details" asp-render-selected-tab-input="false">
                        <WCore-tab asp-name="tab-details" asp-title="@T("Admin.Configuration.Details")" asp-default="true">
                            <form asp-action="CountryAddOrEdit" asp-controller="@ViewData["ControllerName"]" enctype="multipart/form-data" id="CountryForm">
                                <div class="row">
                                    <div class="col-xl-12 my-2">
                                        <!--begin::Group-->
                                        <div class="form-group row">
                                            <WCore-label asp-for="Name" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="Name" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="ShortCode" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="ShortCode" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="PhoneCode" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="PhoneCode" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="Flag" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="Flag" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="LanguageCode" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="LanguageCode" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="ThreeLetterIsoCode" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="ThreeLetterIsoCode" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="TwoLetterIsoCode" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="TwoLetterIsoCode" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="DisplayOrder" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="DisplayOrder" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <WCore-label asp-for="CreatedOn" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="CreatedOn" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="UpdatedOn" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <WCore-editor asp-for="UpdatedOn" asp-required="true" asp-type="form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="UserId" />
                                            <div class="col-lg-10 col-md-8 col-sm-12 pt-3">
                                                @Model.User.EMail
                                                <input asp-for="UserId" type="hidden" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <WCore-label asp-for="CreatedUserId" />
                                            <div class="col-lg-10 col-md-8 col-sm-12 pt-3">
                                                @Model.CreatedUser.EMail
                                                <input asp-for="CreatedUserId" type="hidden" />
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="AllowsShipping" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="AllowsShipping" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="AllowsBilling" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="AllowsBilling" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="Published" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="Published" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="IsActive" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="IsActive" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <WCore-label asp-for="Deleted" />
                                            <div class="col-lg-10 col-md-8 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="Deleted" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <!--end::Group-->
                                        <input type="hidden" asp-for="Id" />
                                        <input type="hidden" asp-for="LimitedToStores" />
                                    </div>
                                </div>
                            </form>
                        </WCore-tab>
                        @if (Model.Id != 0)
                        {
                            <WCore-tab asp-name="tab-cities" asp-title="@T("Admin.Configuration.City")">

                                <a asp-action="cityaddoredit" asp-route-id="0" asp-route-countryid="@Model.Id" class="btn btn-success font-weight-bolder mr-2">
                                    <i class="ki ki-plus icon-xs"></i>
                                    Yeni Ekle
                                </a>
                                <div id="city_datatable"></div>
                            </WCore-tab>
                        }
                    </WCore-tabs>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $("#CountryForm").submit(function (e) {
            var id = @Model.Id;
            e.preventDefault();
            var form = $(this);
            var serialize = form.serialize();
            var url = form.attr('action');
            $.ajax({
                type: "POST",
                url: "/admin/" + url,
                data: serialize,
                success: function (data) {
                    if (id == 0) {
                        window.location.href = "/admin/@ViewData["ControllerName"]/country";
                    }
                    else {
                        Swal.fire({
                            title: 'Başarılı',
                            text: "Listeye dönmek istermisiniz?",
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Evet',
                            cancelButtonText: 'Hayır',
                            timer: 3000,
                            timerProgressBar: true
                        }).then((result) => {
                            if (result.value) {
                                window.location.href = "/admin/@ViewData["ControllerName"]/country";
                            }
                        })
                    }
                }
            });
        });
        $(document).ready(function () {
            var cityDatatable = $("#city_datatable").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "/admin/Common/GetCityFilteredItems?CountryId=@Model.Id",
                            type: "POST",
                            dataType: "json"
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "RecordsFiltered",
                        errors: "Errors"
                    },
                    requestEnd: function (e) {
                        if (e.type == "create" || e.type == "update") {
                            this.read();
                        }
                    },
                    error: function (e) {
                        display_kendoui_grid_error(e);
                        // Cancel the changes
                        this.cancelChanges();
                    },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                toolbar: ["excel", "search"],
                pageable: {
                    refresh: true,
                    pageSizes: [10, 15, 20, 50, 100, 200, 300, 500, 1000, 3000,"all"],
                    @Html.Partial("_GridPagerMessages")
                },
                scrollable: false,
                columns: [{
                    field: "Name",
                    title: "Adı",
                    filterable: true,
                },{
                    field: "Id",
                    title:"İşlemler",
                    width: 100,
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                    template: '<a href="/common/cityaddoredit/#=Id#" class="btn btn-sm btn-clean btn-icon" title="Edit details">\
                                    <i class="la la-edit"></i>\
                                </a>\
                                <a href="javascript:void(0)" data-id="#=Id#" class="btn btn-sm btn-clean btn-icon btnCityDelete" title="Delete">\
                                    <i class="la la-trash"></i>\
                                </a>'
                }]
            });
            $("body").on("click", "#city_datatable .btnCityDelete", function () {
                Swal.fire({
                    title: 'Eminmisiniz?',
                    text: "Kaydı silmek istediğiniz eminmisiniz?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet',
                    cancelButtonText: 'Hayır',
                    timer: 3000,
                    timerProgressBar: true
                }).then((result) => {
                    if (result.value) {
                        var id = $(this).attr("data-id");
                        console.log(id);
                        $.ajax({
                            type: "POST",
                            url: '/Company/AddOrEdit',
                            data: { id: id, delete: true },
                            success: function (data) {
                                cityDatatable.data("kendoGrid").dataSource.read();
                                Swal.fire({
                                    title: 'Başarılı',
                                    icon: 'success',
                                    showCancelButton: false,
                                    showConfirmButton: false,
                                    timer: 1000,
                                    timerProgressBar: true
                                });
                            },
                            error: function (d) {
                                console.log(d);
                            }
                        });
                    }
                })
            });
        });
    </script>
}