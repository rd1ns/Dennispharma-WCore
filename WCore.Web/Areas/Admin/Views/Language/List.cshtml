@section Scripts{
    <script>
        $(document).ready(function () {
            var languageDatatable = $("#language_datatable").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "/Admin/Language/GetFilteredItems",
                            type: "POST",
                            dataType: "json"
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "RecordsFiltered",
                        errors: "Errors"
                    },
                    requestEnd: function (e) {
                        if (e.type == "create" || e.type == "update") {
                            this.read();
                        }
                    },
                    error: function (e) {
                        console.log(e);
                        // Cancel the changes
                        this.cancelChanges();
                    },
                    pageSize: 10,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                toolbar: ["search"],
                pageable: {
                    refresh: true,
                    pageSizes: [10, 15, 20, 50, 100, 200, 300, 500, 1000, 3000],
                    @Html.Partial("_GridPagerMessages")
                },
                filterable: true,
                scrollable: false,
                columns: [
                    {
                        field: "Name",
                        title: "@T("Admin.Configuration.Languages.Fields.Name")",
                        template: '<a href="/admin/language/addoredit/#=Id#" class="btn btn-sm btn-link" title="Edit details"><i class="la la-edit"></i> #=Name#</a>'
                    },
                    {
                        field: "LanguageCulture",
                        title: "@T("Admin.Configuration.Languages.Fields.LanguageCulture")",
                        width: 80,
                    },
                    {
                        field: "DisplayOrder",
                        title: "@T("Admin.Configuration.DisplayOrder")",
                        width: 80,
                    },
                    {
                        field: "Published",
                        title: "@T("Admin.Configuration.Published")",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '# if(Published) {# <span class="btn btn-sm btn-success">@T("admin.configuration.true")</span> #} else {# <span class="btn btn-sm btn-danger">@T("admin.configuration.false")</span> #} #',
                        width: 80,
                        filterable: false
                    },
                    {
                        field: "IsDefault",
                        title: "@T("Admin.Configuration.IsDefault")",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '# if(IsDefault) {# <span class="btn btn-sm btn-success">@T("admin.configuration.true")</span> #} else {# <span class="btn btn-sm btn-danger">@T("admin.configuration.false")</span> #} #',
                        width: 80,
                        filterable: false
                    },
                    {
                        field: "IsAdminDefault",
                        title: "@T("Admin.Configuration.IsAdminDefault")",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '# if(IsAdminDefault) {# <span class="btn btn-sm btn-success">@T("admin.configuration.true")</span> #} else {# <span class="btn btn-sm btn-danger">@T("admin.configuration.false")</span> #} #',
                        width: 80,
                        filterable: false
                    },
                    {
                        field: "AllowSelection",
                        title: "@T("Admin.Configuration.AllowSelection")",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '# if(AllowSelection) {# <span class="btn btn-sm btn-success">@T("admin.configuration.true")</span> #} else {# <span class="btn btn-sm btn-danger">@T("admin.configuration.false")</span> #} #',
                        width: 80,
                        filterable: false
                    },
                    {
                        field: "Id",
                        title: "@T("Admin.Configuration.Transactions")",
                        width: 80,
                        filterable: false,
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '<a href="javascript:void(0)" data-id="#=Id#" class="btn btn-sm btn-clean btn-icon btnDelete" title="Delete">\
                                        <i class="la la-trash"></i>\
                                    </a>'
                    }
                ]
            });
            $("body").on("click", "#language_datatable .btnDelete", function () {
                Swal.fire({
                    title: 'Eminmisiniz?',
                    text: "Kaydı silmek istediğiniz eminmisiniz?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet',
                    cancelButtonText: 'Hayır',
                    timer: 3000,
                    timerProgressBar: true
                }).then((result) => {
                    if (result.value) {
                        var id = $(this).attr("data-id");
                        console.log(id);
                        $.ajax({
                            type: "POST",
                            url: '/admin/language/AddOrEdit',
                            data: { id: id, delete: true },
                            success: function (data) {
                                languageDatatable.data("kendoGrid").dataSource.read();
                                Swal.fire({
                                    title: 'Başarılı',
                                    icon: 'success',
                                    showCancelButton: false,
                                    showConfirmButton: false,
                                    timer: 1000,
                                    timerProgressBar: true
                                });
                            },
                            error: function (d) {
                                console.log(d);
                            }
                        });
                    }
                })
            });
        });
    </script>
}