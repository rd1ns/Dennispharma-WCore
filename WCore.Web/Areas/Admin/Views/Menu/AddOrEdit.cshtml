@model WCore.Web.Areas.Admin.Models.Roles.MenuModel
@using WCore.Framework.Extensions;
@{
    ViewData["PageMainTitle"] = "Menü Yönetimi";
    ViewData["PageTitle"] = "Menü Ekle / Düzenle";
    ViewData["Title"] = ViewData["PageTitle"] + " / " + ViewData["PageMainTitle"];
    ViewData["ControllerName"] = "menu";
    ViewData["DeleteActionName"] = "delete";
}
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="subheader py-2 py-lg-4  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-2">
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">
                    @ViewData["PageTitle"]
                </h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item">
                        <a href="/Admin/menu" class="text-muted">
                            @ViewData["PageMainTitle"]
                        </a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <partial name="_AddOrEditHeaderButtons" model="@Tuple.Create(Model.Id,"MenuForm")" />
            </div>
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container-fluid">
            <form id="MenuForm" asp-action="AddOrEdit" asp-controller="@ViewData["ControllerName"]" enctype="multipart/form-data">
                <div class="card card-custom">
                    <div class="card-body">
                        <ul class="nav nav-tabs nav-bold nav-tabs-line nav-tabs-line-3x mb-5">
                            <li class="nav-item mr-3">
                                <a class="nav-link active" data-toggle="tab" href="#kt_user_edit_tab_1">
                                    <span class="nav-icon text-center">
                                        <i class="fa fa-pen"></i>
                                    </span>
                                    <span class="nav-text font-size-lg">Detaylar</span>
                                </a>
                            </li>
                            <li class="nav-item mr-3">
                                <a class="nav-link" data-toggle="tab" href="#kt_user_edit_tab_2">
                                    <span class="nav-icon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <span class="nav-text font-size-lg">Kayıt Bilgisi</span>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane show active px-7" id="kt_user_edit_tab_1" role="tabpanel">
                                <div class="row">
                                    <div class="col-xl-12 my-2">
                                        <div class="form-group row">
                                            <tankar-label asp-for="Name" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="Name" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <tankar-label asp-for="ParentId" />
                                            <div class="col-lg-4 col-md-6 col-sm-12">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <tankar-label asp-for="Slug" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="Slug" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <tankar-label asp-for="ControllerGroup" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="ControllerGroup" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <tankar-label asp-for="Controller" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="Controller" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <tankar-label asp-for="Action" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="Action" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <tankar-label asp-for="DataToken" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="DataToken" asp-required="true" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <tankar-label asp-for="PluginName" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="PluginName" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <input type="hidden" asp-for="Id" />
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane px-7" id="kt_user_edit_tab_2" role="tabpanel">
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="form-group row">
                                            <tankar-label asp-for="DisplayOrder" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <tankar-editor asp-for="DisplayOrder" asp-type="form-control form-control-sm form-control-solid" />
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <tankar-label asp-for="IsActive" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="IsActive" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <tankar-label asp-for="IsHidden" />
                                            <div class="col-lg-10 col-md-6 col-sm-12">
                                                <div class="checkbox-inline">
                                                    <label class="checkbox pt-3">
                                                        <input asp-for="IsHidden" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var id = @Model.Id;
        $("#MenuForm").submit(function (e) {
            e.preventDefault();
            var form = $(this);
            var serialize = form.serialize();
            var url = form.attr('action');

            $.ajax({
                type: "POST",
                url: url,
                data: serialize,
                success: function (data) {
                    if (id != 0) {
                        window.location.href = "/@ViewData["ControllerName"]";
                    }
                    else {
                        Swal.fire({
                            title: 'Başarılı',
                            text: "Listeye dönmek istermisiniz?",
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Evet',
                            cancelButtonText: 'Hayır',
                            timer: 3000,
                            timerProgressBar: true
                        }).then((result) => {
                            if (result.value) {
                                window.location.href = "/@ViewData["ControllerName"]";
                            }
                        })
                    }
                }
            });
        });
    </script>
}